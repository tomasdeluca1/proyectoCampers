<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head') %> 
    <link rel="stylesheet" href="../../../CSS/users/allUsers.css">
    <title>Todos los usuarios</title>
</head>
<body>
<!--Header-->
    <%- include('../partials/header') %> 

    <section class="nav-vehiculos">
        <article>
            <h3><a href="home">Home</a> / <a href="all-users">Todos los usuarios</a></h3>
        </article>
    </section>

    <!--CUERPO DEL CODIGO-->
    <main class="body">
        <div class="container-all-body">
            <div class="datos-usuarios-div">
                <h2 class="datos-usuarios-titulo">Datos usuarios</h2>
                <div class="buscador-div">
                    <form action="search" method="get">
                        <input type="text" name="searchingUsers" id="" placeholder="Buscar usuario por su nombre, apellido o nombre de usuario" class="input-buscar">
                        <button class="button-buscar"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </form>
                </div>
            </div>
            <% for (let i = 0; i < users.length; i++) { %>
                <div class="container-user-data">
                    <div class="container-numero-usuario">
                        <h2>Usuario numero: <%= users[i].id %></h2>
                        <div class="linea-gris"></div>
                    </div>
                    <div class="container-dato">
                        <p class="tipo-de-dato">Nombre de usuario</p>
                        <p class="respuesta-tipo-de-dato"><%= users[i].userName %></p>
                    </div>
                    <div class="linea-gris"></div>
                    <div class="container-dato">
                        <p class="tipo-de-dato">Nombre</p>
                        <p class="respuesta-tipo-de-dato"><%= users[i].firstName %></p>
                    </div>
                    <div class="linea-gris"></div>
                    <div class="container-dato">
                        <p class="tipo-de-dato">Apellido</p>
                        <p class="respuesta-tipo-de-dato"><%= users[i].lastName %></p>
                    </div>
                    <div class="linea-gris"></div>
                    <div class="container-dato">
                        <p class="tipo-de-dato">Email</p>
                        <p class="respuesta-tipo-de-dato"><%= users[i].email %></p>
                    </div>
                    <div class="linea-gris"></div>
                    <div class="container-dato">
                        <p class="tipo-de-dato">Numero de telefono</p>
                        <% if (users && !users[i].phoneNumber) { %>
                            <p class="respuesta-tipo-de-dato">-</p>
                        <% } else {%> 
                            <p class="respuesta-tipo-de-dato"><%= users[i].phoneNumber %></p>
                        <% } %> 
                    </div>
                    <div class="linea-gris"></div>
                    <div class="container-dato">
                        <p class="tipo-de-dato">Tipo de usuario</p>
                        <p class="respuesta-tipo-de-dato"><%= users[i].typeOfUser %></p>
                    </div>
                </div>
            <% } %>
        </div>
    </main>
    <!--FOOTER-->
    <%- include('../partials/footer') %> 
</body>
</html>